{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "RipperMod Manager",
  "version": "0.1.0",
  "identifier": "com.rippermod.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "powershell -ExecutionPolicy Bypass -File ../scripts/ensure-dev-sidecar.ps1 && npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "RipperMod Manager",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": false,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:8425 https://api.nexusmods.com; img-src 'self' https://staticdelivery.nexusmods.com data:; style-src 'self' 'unsafe-inline'"
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["nxm"]
      }
    },
    "updater": {
      "endpoints": [
        "https://github.com/Y4rd13/rippermod-manager/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDA4MDMyOTk2MjAyMzJGOTgKUldTWUx5TWdsaWtEQ01XU3VYamxCMVVYTjhiMm5LcXhSWTMvaFIwb1VJRVZVMGprWVBuVmJGNjIK"
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/rmm-backend"],
    "shortDescription": "AI-powered mod manager for PC games",
    "longDescription": "RipperMod Manager combines a chat agent with Nexus Mods integration to scan, group, correlate, and manage game mods.",
    "copyright": "Copyright (c) 2025 Y4rd13",
    "category": "Utility",
    "publisher": "Y4rd13",
    "windows": {
      "nsis": {
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": ["English"]
      },
      "certificateThumbprint": null,
      "timestampUrl": null
    }
  }
}
